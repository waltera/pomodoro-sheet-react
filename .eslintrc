{
  'plugins': [
    'react',
    'import',
    'jsx-a11y',
    'html'
  ],

  'parser': 'babel-eslint',

  'rules': {
    'react/jsx-filename-extension': [1, { 'extensions': ['.js', '.jsx'] }],
    'react/prop-types': 0,
    'jsx-a11y/label-has-for': 0,
    'class-methods-use-this': 0,
    'no-restricted-syntax': 0,
    'no-param-reassign': 0,
    'no-case-declarations': 0,
    'no-console': 0,
    'camelcase': 0,
    'import/prefer-default-export': 0
  },

  'parserOptions': {
    'sourceType': 'module'
  },

  'env': {
    'es6': true,
    'browser': true,
    'node': true,
    'jest': true
  }
}
